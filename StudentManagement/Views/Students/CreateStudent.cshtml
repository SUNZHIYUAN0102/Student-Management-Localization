@model StudentManagement.Models.StudentViewModel.StudentEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<h2>@localizer["title"]</h2>

<form asp-controller="Students" asp-action="CreateStudent" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group col-md-4">
        <label>@localizer["studentname"]</label>
        <input asp-for="StudentName" class="form-control" />
        <span asp-validation-for="StudentName" class="text-danger"></span>
    </div>

    <div class="form-group col-md-4">
        <label>@localizer["groupnumber"]</label>
        <input asp-for="GroupNumber" class="form-control" />
        <span asp-validation-for="GroupNumber" class="text-danger"></span>
    </div>

    <div class="form-group col-md-3">
        <button type="submit" class="btn btn-primary">@localizer["create"]</button>
    </div>
</form>




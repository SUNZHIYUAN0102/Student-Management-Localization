@model IEnumerable<StudentManagement.Models.Student>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<h1>@localizer["title"]</h1>

<a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateStudent" asp-controller="Students">@localizer["add"]</a>

@if (Model.Any())
{
    foreach (var student in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                <h3>
                    @student.GroupNumber
                </h3>
            </div>
            <div class="card-body ">
                <h5 class="card-title">@student.StudentName</h5>
            </div>
            <div class="card-footer">
                <form method="post" asp-action="DeleteStudent" asp-controller="Students" asp-route-id="@student.Id">
                    <a class="btn btn-primary" asp-action="EditStudent" asp-controller="Students" asp-route-id="@student.Id">@localizer["edit"]</a>
                    <span id="confirmSpan_@student.Id" style="display:none">
                        <span>@localizer["deleteSpan"]</span>
                        <button type="submit" class="btn btn-danger">@localizer["yes"]</button>
                        <a href="#" class="btn btn-primary" onclick="confirmDelete('@student.Id', false)">@localizer["no"]</a>
                    </span>

                    <span id="deleteSpan_@student.Id">
                        <a href="#" class="btn btn-danger" onclick="confirmDelete('@student.Id', true)">@localizer["delete"]</a>
                    </span>
                </form>
            </div>
        </div>
    }
}



@section Scripts{
    <script src="~/js/site.js"></script>
}



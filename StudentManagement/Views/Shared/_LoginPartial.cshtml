@using Microsoft.AspNetCore.Identity
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject StudentManagement.Service.UserService UserService


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="navbar-nav navbar-right">
            @if (await UserService.GetPicture(User.Identity.Name) != null)
            {
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <img src="~/uploads/@await UserService.GetPicture(User.Identity.Name)" style="height:40px; width:40px" class="registericon" />
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <u><a class="dropdown-item"><strong>@await UserService.GetFullName(User.Identity.Name)</strong></a></u>
                        <a class="dropdown-item" asp-controller="Manage" asp-action="Index">@localizer["profile"]</a>
                        <a class="dropdown-item"><input type="submit" value="@localizer["logout"]" class="btn btn-danger"></a>
                    </div>
                </li>
            }
            else
            {
                <li>
                    <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@await UserService.GetFullName(User.Identity.Name)</a>
                </li>
                <li>
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">@localizer["logout"]</button>
                </li>
            }

        </ul>
    </form>
}

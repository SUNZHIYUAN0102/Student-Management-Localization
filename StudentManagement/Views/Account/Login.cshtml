@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@model StudentManagement.Models.AccountViewModel.LoginViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@inject Microsoft.AspNetCore.Identity.SignInManager<StudentManagement.Models.User> SignInManager

@{ ViewData["Title"] = "Log in";
   Layout = "~/Views/_AuthLayout.cshtml"; 
}

<div class="col-md-10 offset-md-1">
    <hr />
    <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label>@localizer["Email"]</label>
            <input asp-for="Email" class="form-control" placeholder="email@example.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>@localizer["Password"]</label>
            <div class="input-group">
                <div class="input-group-append">
                    <span asp-validation-for="Password" class="input-group-text" ></span>
                </div>

                <input asp-for="Password" class="form-control" placeholder="Password!"/>
            </div>

        </div>
        <div class="form-group">
            <div class="checkbox">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">@localizer["Login"]</button>
        </div>
        <p>
            <a asp-action="Register" asp-controller="Account">@localizer["Register"]</a>
        </p>
        <p>
            <a asp-action="ForgotPassword" asp-controller="Account">@localizer["ForgotPassword"]</a>
        </p>
    </form>
</div>

<div class="col-md-10 offset-md-1">
    <form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl"> 
        <div>
            @foreach (var provider in Model.ExternalLogins)
            {
            <button type="submit" class="btn btn-primary"
                    name="provider" value="@provider.Name">
                @provider.DisplayName
            </button>
            }
        </div>
    </form>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

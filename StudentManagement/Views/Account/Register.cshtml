@model StudentManagement.Models.AccountViewModel.RegisterViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{ ViewData["Title"] = "Registration"; }

<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                        </div>
                        <form method="post" asp-action="Register" asp-controller="Account" class="user" id="registerform">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <p class="text-success">@ViewData["StatusMessage"]</p>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input autocomplete="off" asp-for="FirstName" type="text" class="form-control form-control-user" id="exampleFirstName"
                                           placeholder="First Name">
                                </div>
                                <div class="col-sm-6">
                                    <input autocomplete="off" asp-for="LastName" type="text" class="form-control form-control-user" id="exampleLastName"
                                           placeholder="Last Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <input autocomplete="off" asp-for="Email" type="email" class="form-control form-control-user" id="exampleInputEmail"
                                       placeholder="Email Address">
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="Password" type="password" class="form-control form-control-user"
                                           id="examplePassword" placeholder="Password" onkeyup="trigger()">
                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-user"
                                           id="exampleRepeatPassword" placeholder="Repeat Password">
                                </div>
                            </div>

                            <div class="indicator">
                                <span class="weak"></span>
                                <span class="medium"></span>
                                <span class="strong"></span>
                            </div>
                            <div class="mb-3 text"></div>

                            <a href="#" class="btn btn-primary btn-user btn-block" onclick="document.getElementById('registerform').submit();">
                                Register Account
                            </a>
                            <hr>
                            <a href="index.html" class="btn btn-google btn-user btn-block">
                                <i class="fab fa-google fa-fw"></i> Register with Google
                            </a>
                            <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
                            </a>
                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" asp-action="ForgotPassword" asp-controller="Account">Forgot Password?</a>
                        </div>
                        <div class="text-center">
                            <a asp-action="Login" asp-controller="Account" class="small">Already have an account? Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    <link rel="stylesheet" href="~/css/passwordStrength.css"/>
} 
@section Scripts{ 
    <script src="~/js/passwordStrength.js"></script>
}


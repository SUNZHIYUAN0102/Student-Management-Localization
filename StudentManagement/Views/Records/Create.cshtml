@model StudentManagement.Models.RecordViewModel.RecordCreateViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Create";
}

<h1>@localizer["title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-projectId="@ViewBag.Project.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@localizer["studentname"]</label>
                <select asp-for="StudentName" class="form-control" asp-items="ViewBag.StudentName"></select>
            </div>

            <div class="form-group">
                <label class="control-label">@localizer["logtime"]</label>
                <input asp-for="LogTime" class="form-control" />
                <span asp-validation-for="LogTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">@localizer["week"]</label>
                <select asp-for="Week" class="form-control" asp-items="ViewBag.Week"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="@localizer["create"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="Projects" asp-route-id="@ViewBag.Project.Id">@localizer["back"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

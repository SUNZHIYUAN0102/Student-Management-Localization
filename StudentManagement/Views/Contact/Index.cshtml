@model StudentManagement.Models.ContactViewModel.Email
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<h1>@localizer["title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div class="form-group">
                <label class="control-label">@localizer["to"]</label>
                <input asp-for="To" class="form-control" value="zhiyuansun703@gmail.com" />
                <span asp-validation-for="To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@localizer["subject"]</label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@localizer["body"]</label>
                <textarea asp-for="Body" class="form-control" rows="3" cols="15"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@localizer["send"]" class="btn btn-primary" />
            </div>
            <h5>@ViewBag.message</h5>
        </form>
    </div>
</div>

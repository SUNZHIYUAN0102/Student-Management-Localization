@model StudentManagement.Models.ManageViewModel.ProfileViewModel

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{ ViewData["Title"] = "Manage your account";}


<body>
    <div class="container">
        <p>
            <h2>@localizer["title"]</h2>
        </p>

        <p class="text-success">@ViewData["StatusMessage"]</p>
        <div class="row">
            <div class="col-md">
                <div class="list-group" id="myList" role="tablist">
                    <a class="list-group-item list-group-item-action active" data-toggle="list" href="#changePassword" role="tab">@localizer["changePassword"]</a>
                    <a class="list-group-item list-group-item-action" data-toggle="list" href="#changeEmail" role="tab">@localizer["changeEmail"]</a>
                    <a class="list-group-item list-group-item-action" data-toggle="list" href="#profilePhoto" role="tab">@localizer["profilePhoto"]</a>
                    <a class="list-group-item list-group-item-action" data-toggle="list" href="#changeUserInformation" role="tab">@localizer["changeInformation"]</a>
                </div>
            </div>
            <div class="col-8">
                <div class="tab-content">
                    <div class="tab-pane active" id="changePassword" role="tabpanel">
                        <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group col-md-8">
                                <label>@localizer["oldPassword"]</label>
                                <input asp-for="@Model.changePasswordViewModel.OldPassword" class="form-control" />
                                <span asp-validation-for="@Model.changePasswordViewModel.OldPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-8">
                                <label>@localizer["newPassword"]</label>
                                <input asp-for="@Model.changePasswordViewModel.NewPassword" class="form-control" />
                                <span asp-validation-for="@Model.changePasswordViewModel.NewPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-8">
                                <label>@localizer["confirmPassword"]</label>
                                <input asp-for="@Model.changePasswordViewModel.ConfirmPassword" class="form-control" />
                                <span asp-validation-for="@Model.changePasswordViewModel.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <button type="submit" class="btn btn-primary btn-block">@localizer["changePassword"]</button>
                            </div>
                        </form>
                    </div>

                    <div class="tab-pane" id="changeEmail" role="tabpanel">
                        <form asp-controller="Manage" asp-action="ChangeEmail" method="post" class="form-horizontal">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group col-md-8">
                                <label>@localizer["email"]</label>
                                <input asp-for="@Model.changeEmailViewModel.NewEmail" class="form-control" />
                                <span asp-validation-for="@Model.changeEmailViewModel.NewEmail" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <button type="submit" class="btn btn-primary btn-block">@localizer["changeEmail"]</button>
                            </div>
                        </form>
                    </div>

                    <div class="tab-pane" id="profilePhoto" role="tabpanel">
                        <form asp-controller="Manage" asp-action="AddPhoto" method="post" class="form-horizontal" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group col-md-8">
                                <img style="width:300px;height:300px" src="~/uploads/@ViewBag.ImagePath" class="img-thumbnail" />
                            </div>
                            <div class="form-group col-md-8">
                                <label>@localizer["imagePath"]</label>

                                <input type="file" name="file" class="form-control" />
                                <span asp-validation-for="@Model.user.Avatar" class="text-danger"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <button type="submit" class="btn btn-primary btn-block">@localizer["upload"]</button>
                            </div>
                        </form>
                    </div>

                    <div class="tab-pane" id="changeUserInformation" role="tabpanel">
                        <form asp-controller="Manage" asp-action="ChangeUserInformation" method="post" class="form-horizontal">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group col-md-8">
                                <label>@localizer["firstName"]</label>
                                <input asp-for="@Model.changeInformationViewModel.FirstName" class="form-control" value="@Model.changeInformationViewModel.FirstName" />
                            </div>
                            <div class="form-group col-md-8">
                                <label>@localizer["lastName"]</label>
                                <input asp-for="@Model.changeInformationViewModel.LastName" class="form-control" />
                            </div>
                            <div class="form-group col-md-8">
                                <label>@localizer["degree"]</label>
                                <input asp-for="@Model.changeInformationViewModel.Degree" class="form-control" />
                            </div>
                            <div class="form-group col-md-8">
                                <label>@localizer["exp"]</label>
                                <input asp-for="@Model.changeInformationViewModel.Exp" class="form-control" />
                            </div>
                            <div class="form-group col-md-8">
                                <label>@localizer["address"]</label>
                                <input asp-for="@Model.changeInformationViewModel.Address" class="form-control" />
                            </div>
                            <div class="form-group col-md-8">
                                <label>@localizer["phone"]</label>
                                <input asp-for="@Model.changeInformationViewModel.Phone" class="form-control" />
                            </div>
                            <div class="form-group col-md-8">
                                <label>@localizer["facebookUrl"]</label>
                                <input asp-for="@Model.changeInformationViewModel.FaceBookUrl" class="form-control" />
                            </div>
                            <div class="form-group col-md-8">
                                <label>@localizer["twitterUrl"]</label>
                                <input asp-for="@Model.changeInformationViewModel.TwitterUrl" class="form-control" />
                            </div>
                            <div class="form-group col-md-8">
                                <label>@localizer["vkUrl"]</label>
                                <input asp-for="@Model.changeInformationViewModel.VKUrl" class="form-control" />
                            </div>
                            <div class="form-group col-md-8">
                                <label>@localizer["instagramUrl"]</label>
                                <input asp-for="@Model.changeInformationViewModel.InstagramUrl" class="form-control" />
                            </div>

                            <div class="form-group col-md-6">
                                <button type="submit" class="btn btn-primary btn-block">@localizer["changeInformation"]</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>









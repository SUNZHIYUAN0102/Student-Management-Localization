@model IEnumerable<StudentManagement.Models.Subject>

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{ ViewData["Title"] = "Subjects"; }


<h1>All Subjects</h1>


@if ((User.IsInRole("Teacher")) || (User.IsInRole("Administrator")))
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="Create" asp-controller="Subjects">Add Subjects</a>
}


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Subject's DataTable</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Subjects</th>
                        <th>Creator</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><a asp-action="Create" asp-controller="Projects" asp-route-subjectId="@item.Id">@item.Name</a></td>
                            <td>@item.Creator.FirstName</td>
                            <td>@item.Created</td>
                            <td>
                                <form style="display:inline-block;color:white" method="post" asp-action="Join" asp-controller="UserSubjects" asp-route-subjectId="@item.Id">
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-sign-in-alt"></i>
                                    </button>
                                </form>
                                <a title="Edit" class="btn btn-info" asp-action="Edit" asp-controller="Subjects" asp-route-id="@item.Id">
                                    <i class="far fa-edit"></i>
                                </a>

                                <a title="Delete" class="btn btn-danger" data-toggle="modal" href="#subjectDeleteModal-@item.Id">
                                    <i class="fas fa-trash-alt"></i>
                                </a>

                                <form method="post" asp-action="Delete" asp-controller="Subjects" asp-route-id="@item.Id">
                                    <div id="subjectDeleteModal-@item.Id" class="modal fade">
                                        <div class="modal-dialog modal-confirm">
                                            <div class="modal-content">
                                                <div class="modal-header flex-column">
                                                    <div class="icon-box">
                                                        <i class="fas fa-times-circle"></i>
                                                    </div>
                                                    <h4 class="modal-title w-100">Are you sure?</h4>
                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Do you really want to delete these sources? This process cannot be undone.</p>
                                                </div>
                                                <div class="modal-footer justify-content-center">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/demo/datatables-demo.js"></script>
}
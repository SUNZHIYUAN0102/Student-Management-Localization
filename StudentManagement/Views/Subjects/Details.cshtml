@model StudentManagement.Models.Subject

@{
    ViewData["Title"] = "Subject's Deatil";

}

<div class="row mb-4" style="justify-content: center;">
    <div class="card-body col-12 col-lg-8" style="height:15rem;background-image:url(https://www.gstatic.com/classroom/themes/@Model.ThemeName);background-position:center;background-size:cover;color:#fff;display:flex;justify-content:space-between;border-radius:.4rem;">
        <h1>@Model.Name</h1>
        <h1><a style="color:white" asp-action="Create" asp-controller="Projects" asp-route-subjectId="@Model.Id"><i class="fas fa-plus"></i></a></h1>
    </div>
</div>


<div class="row" style="justify-content:center">
    <nav class="col-12 col-lg-8">
        <div class="nav nav-tabs" id="nav-tab" role="tablist" style="justify-content:center">
            <a class="nav-link active" id="nav-project-tab" data-toggle="tab" href="#nav-project" role="tab" aria-controls="nav-project" aria-selected="true" style="flex:1;text-align:center">Projects</a>
            <a class="nav-link" id="nav-user-tab" data-toggle="tab" href="#nav-user" role="tab" aria-controls="nav-user" aria-selected="false" style="flex:1;text-align:center">Users</a>
            <a class="nav-link" id="nav-code-tab" data-toggle="tab" href="#nav-code" role="tab" aria-controls="nav-code" aria-selected="false" style="flex:1;text-align:center">Code</a>
        </div>
    </nav>
    <div class="tab-content col-12 col-lg-8" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-project" role="tabpanel" aria-labelledby="nav-project-tab">
            @foreach (var item in Model.Projects)
            {
                <div class="card shadow mb-4 mt-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <div style="width:40px;height:40px;background-color:#4285f4;border-radius:50%;color:#fff;display:flex;justify-content:center;align-items:center"><i class="fas fa-award"></i></div>
                        <div style="display:flex;flex-direction:column;justify-content:space-between;align-items:flex-start;cursor:pointer">
                            <a asp-action="Details" asp-controller="Projects" asp-route-id="@item.Id">
                                <h6 class="m-0 font-weight-bold text-primary">@item.Creator.FullName uploads new project: @item.Title</h6>
                                <p style="margin:0;font-size:.5rem">@item.Created.ToShortDateString() (last time modified:@item.Modified.ToShortDateString())</p>
                            </a>
                        </div>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                <div class="dropdown-header">Dropdown Header:</div>
                                <a class="dropdown-item" asp-action="Edit" asp-controller="Projects" asp-route-id="@item.Id">Move to top</a>
                                <a class="dropdown-item" href="#" onclick="shareLink(@item.Created)">Share</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="tab-pane fade" id="nav-user" role="tabpanel" aria-labelledby="nav-user-tab">
            @foreach (var item in ViewBag.users)
            {
                <div class="mt-4" style="color:#1967d2;border-bottom:1px solid #1967d2"><h1>@item.Key</h1></div>
                @foreach (var data in item)
                {
                    <div class="mt-3 md-3" style="border-bottom:1px solid #e0e0e0;display:flex;justify-content:flex-start;align-items:center;height:50px">
                        <div class="mr-4" style="width:40px;height:40px;background-color:#4285f4;border-radius:50%;color:#fff;display:flex;justify-content:center;align-items:center">
                            <a asp-action="Profile" asp-controller="Manage" asp-route-id="@data.User.Id">
                                <img style="width:40px;height:40px;border-radius:50%" src="~/uploads/@data.User.Avatar" />
                            </a>
                        </div>
                        <span>@data.User.FullName</span>
                    </div>
                }
            }
        </div>
        <div class="tab-pane fade" id="nav-code" role="tabpanel" aria-labelledby="nav-code-tab">
            @if (Model.Code != null)
            {
                <div class="container mt-4">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between" style="border:2px dashed #d1d3e2;border-radius:.5rem">
                        <div style="display:flex;flex-direction:column;justify-content:space-between;align-items:flex-start">
                            <h5 class="m-0 font-weight-bold text-primary">Subject's Code</h5>
                            <h6 class="m-0 font-weight-bold mt-2">@Model.Code</h6>
                        </div>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                                <div class="dropdown-header">Code Setting:</div>
                                <form method="post" asp-action="ResetCode" asp-controller="Subjects" asp-route-subjectId="@Model.Id">
                                    <button type="submit" class="dropdown-item">Reset Subject's Code</button>
                                </form>
                                <div class="dropdown-divider"></div>
                                <form method="post" asp-action="RemoveCode" asp-controller="Subjects" asp-route-subjectId="@Model.Id">
                                    <button type="submit" class="dropdown-item">Close Subject's Code</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
               <form method="post" asp-action="ResetCode" asp-controller="Subjects" asp-route-subjectId="@Model.Id">
                   <button class="btn btn-primary mt-4" type="submit">Generate Subject's Code</button>
               </form>
            }
        </div>

    </div>
</div>

<script>
    function shareLink(projectId) {
        navigator.clipboard.writeText("meowww");
    }
</script>
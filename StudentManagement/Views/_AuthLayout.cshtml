@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div>
            <h1 class="display-4">Welcome!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <img src="~/images/mogeko.gif" style="height:200px; width:200px" />
        </div>

        <div class="col">
            <div class="card login-logout-tab">
                <div calss="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">@localizer["signIn"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">@localizer["signUp"]</a>
                        </li>
                    </ul>
                </div>

                <div class="card-content">
                    <div class="row">
                        <div class="col-md-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>




@section Scripts {
    @RenderSection("Scripts", required: false)
}

<script>
    $(function () {
        var current = this.location.pathname;
        $('.nav-tabs li a').each(function () {
            var $this = $(this);
            if (current.indexOf($this.attr('href')) !== -1) {
                $this.addClass('active');
            }
        })
    })
</script>
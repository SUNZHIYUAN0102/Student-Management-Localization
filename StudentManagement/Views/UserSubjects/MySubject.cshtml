@model IEnumerable<StudentManagement.Models.UserSubject>

@{
    ViewData["Title"] = "My Subject";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">My Subjects</h1>
</div>

<div class="row" style="justify-content: space-evenly">
    @foreach (var item in Model)
    {
        <div class="card shadow mb-4 mr-4" style="width:300px;height:294px;cursor: pointer;">
            <div style="height:30%;" class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">
                    <a asp-action="Details" asp-controller="Subjects" asp-route-id="@item.SubjectId">@item.Subject.Name</a>
                </h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                        <div class="dropdown-header">Dropdown Header:</div>
                        <a href="#mySubjectDeleteModal-@item.SubjectId" class="dropdown-item" data-toggle="modal">Leave Subject</a>
                        <a class="dropdown-item" href="#">Another action</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Something else here</a>
                    </div>
                </div>
            </div>
            <!-- Card Body -->
            <div class="card-body" style="position:relative;padding-top:30px;">
                <div style="width:75px; height:75px; background:pink; border-radius:50%; position:absolute; top:-40px; left:180px;">
                    <img style="width:100%;height:100%;border-radius:50%" src="~/uploads/@item.Subject.Creator.ImagePath" />
                </div>
                Meowwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww
            </div>
            <div style="height:15%" class="card-footer">
                @item.Subject.Created.ToShortDateString()
            </div>
        </div>

        <form method="post" asp-action="Leave" asp-controller="UserSubjects" asp-route-subjectId="@item.SubjectId">
            <div id="mySubjectDeleteModal-@item.SubjectId" class="modal fade">
                <div class="modal-dialog modal-confirm">
                    <div class="modal-content">
                        <div class="modal-header flex-column">
                            <div class="icon-box">
                                <i class="fas fa-times-circle"></i>
                            </div>
                            <h4 class="modal-title w-100">Are you sure?</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        </div>
                        <div class="modal-body">
                            <p>Do you really want to leave this subject? This process cannot be undone.</p>
                        </div>
                        <div class="modal-footer justify-content-center">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
</div>

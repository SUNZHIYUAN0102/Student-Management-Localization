@model IEnumerable<StudentManagement.Models.UserSubject>

@{
    ViewData["Title"] = "My Subject";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">My Subjects</h1>
</div>

<div class="row" style="justify-content: space-evenly">
    @foreach (var item in Model)
    {
        <div class="card shadow mb-4 mr-4" style="width:300px;height:294px;cursor: pointer;">
            <div style="height:30%;" class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">@item.Subject.Name</h6>
                <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                        <form method="post" asp-action="Leave" asp-controller="UserSubjects" asp-route-subjectId="@item.SubjectId">
                            <div class="dropdown-header">Dropdown Header:</div>
                            <button class="dropdown-item" type="submit">Leave the subject</button>
                            <a class="dropdown-item" href="#">Another action</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Card Body -->
            <div class="card-body" style="position:relative;padding-top:30px;">
                <div style="width:75px; height:75px; background:pink; border-radius:50%; position:absolute; top:-40px; left:180px;">
                    <img style="width:100%;height:100%;border-radius:50%" src="~/uploads/@item.Subject.Creator.ImagePath"/>
                </div>
                Meowwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwwww
            </div>
            <div style="height:15%" class="card-footer">
                @item.Subject.Created.ToShortDateString()
            </div>
        </div>
    }
</div>


@model StudentManagement.Models.CreateRoleViewModel.EditUserViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewBag.Title = "Edit Users";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1>Edit User</h1>
                                </div>
                                <form method="post" class="user">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">@localizer["email"]</label>
                                        <div class="col-sm-10">
                                            <input asp-for="Email" disabled class="form-control">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-md-6">
                                            <label>First Name</label>
                                            <input asp-for="FirstName" class="form-control" />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label>Last Name</label>
                                            <input asp-for="LastName" class="form-control" />
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <button type="submit" class="mb-3 btn btn-primary btn-user btn-block">Update User</button>

                                    <div class="card">
                                        <div class="card-header">
                                            <h3>@localizer["userroles"]</h3>
                                        </div>
                                        <div class="card-body">
                                            @if (Model.Roles.Any())
                                            {
                                                @foreach(var role in Model.Roles)
                                                {
                                                    <h5 class="card-title">@role</h5>
                                                }
                                            }
                                            else
                                            {
                                                <h5 class="crad-title">User doesn't have any role yet.</h5>
                                            }
                                        </div>
                                        <div class="card-footer">
                                            <a class="btn btn-primary" asp-action="ManageUserRoles" asp-controller="Admin" asp-route-userId="@Model.Id" style="width:auto">Manage User's Roles</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model StudentManagement.Models.CreateRoleViewModel.CreateRoleViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{ ViewData["Title"] = "Create New Role";}

<h1>@localizer["title"]</h1>

<form asp-controller="Admin" asp-action="CreateRole" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group col-md-4">
        <label>@localizer["rolename"]</label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <div class="form-group col-md-3">
        <button type="submit" class="btn btn-primary ">@localizer["create"]</button>
    </div>
</form>


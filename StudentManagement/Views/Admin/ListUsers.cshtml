@model IEnumerable<StudentManagement.Models.User>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewBag.Title = "All Users";
}

<h1>@localizer["title"]</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="Register" asp-controller="Account">@localizer["add"]</a>
    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                @localizer["userid"]: @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.Email</h5>
            </div>
            <div class="card-footer">
                <form method="post" asp-action="DeleteUsers" asp-controller="Admin" asp-route-id="@user.Id">
                    <a class="btn btn-primary" asp-action="EditUsers" asp-controller="Admin" asp-route-id="@user.Id">@localizer["edit"]</a>
                    <span id="confirmSpan_@user.Id" style="display:none">
                        <span>@localizer["deleteSpan"]</span>
                        <button type="submit" class="btn btn-danger">@localizer["yes"]</button>
                        <a href="#" class="btn btn-primary" onclick="confirmDelete('@user.Id', false)">@localizer["no"]</a>
                    </span>

                    <span id="deleteSpan_@user.Id">
                        <a href="#" class="btn btn-danger" onclick="confirmDelete('@user.Id', true)">@localizer["delete"]</a>
                    </span>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            @localizer["exception"]
        </div>
        <div class="card-body">
            <h5 class="card-title">
                @localizer["usebutton"]
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-controller="Account" asp-action="Register">
                @localizer["add"]
            </a>
        </div>
    </div>
}

@section Scripts{
    <script src="~/js/site.js"></script>
}
@model StudentManagement.Models.CreateRoleViewModel.EditRolesViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewBag.Title = "Edit Roles";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1>Edit Role</h1>
                                </div>
                                <form method="post" class="user">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Role Name</label>
                                        <div class="col-sm-10">
                                            <input asp-for="RoleName" class="form-control">
                                        </div>
                                    </div>

                                    <button type="submit" class="mb-3 btn btn-primary btn-user btn-block">Update Role</button>

                                    <div class="card">
                                        <div class="card-header">
                                            <h3>Users in this role</h3>
                                        </div>
                                        <div class="card-body">
                                            @if (Model.Users.Any())
                                            {
                                                @foreach (var user in Model.Users)
                                                {
                                                    <h5 class="card-title">@user</h5>
                                                }
                                            }
                                            else
                                            {
                                                <h5 class="crad-title">This role doesn't have any users.</h5>
                                            }
                                        </div>
                                        <div class="card-footer">
                                            <a class="btn btn-primary" asp-action="EditUsersInRole" asp-controller="Admin" asp-route-roleId="@Model.Id" style="width:auto">Manage Role's Users</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>